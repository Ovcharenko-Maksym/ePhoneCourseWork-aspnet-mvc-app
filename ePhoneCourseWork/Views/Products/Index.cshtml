@using ePhoneCourseWork.Models
@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Products";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card h-100 mb-3" style="max-width:700px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title m-0">@product.Name</h5>
                                <a href="#" class="text-white float-right"><i class="bi bi-pencil-square"></i> Edit</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@product.Image" class="card-img" alt="Product Image">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><b>Color:</b> @product.Color</p>
                            <p class="card-text"><b>Price:</b> $@product.Price</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer mt-auto">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="#" class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i> Details</a>
                        <a href="#" class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Add to Cart</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
